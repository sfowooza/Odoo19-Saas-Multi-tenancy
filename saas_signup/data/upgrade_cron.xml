<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job to Check Trial Expiration -->
        <record id="ir_cron_check_trial_expiration" model="ir.cron">
            <field name="name">SaaS: Check Trial Expiration</field>
            <field name="model_id" ref="model_saas_client"/>
            <field name="state">code</field>
            <field name="code">model.check_trial_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
