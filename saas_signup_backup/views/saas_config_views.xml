<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Master Password Info Page -->
    <record id="view_master_password_info" model="ir.ui.view">
        <field name="name">saas.master.password.wizard.form</field>
        <field name="model">saas.master.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Master Password Information">
                <div class="alert alert-info" role="status" aria-live="polite">
                    <h3 class="alert-heading">
                        <i class="fa fa-key" title="Security" aria-hidden="true"/> Database Manager Credentials
                    </h3>
                    <hr/>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5>Master Admin Login</h5>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>URL:</th>
                                    <td><code>http://localhost:8080</code></td>
                                </tr>
                                <tr>
                                    <th>Database:</th>
                                    <td><code>Odoo19Db</code></td>
                                </tr>
                                <tr>
                                    <th>Username:</th>
                                    <td><code>admin</code></td>
                                </tr>
                                <tr>
                                    <th>Password:</th>
                                    <td><code>admin</code></td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Database Manager</h5>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>URL:</th>
                                    <td><code>http://localhost:8080/web/database/manager</code></td>
                                </tr>
                                <tr>
                                    <th>Master Password:</th>
                                    <td><code>SaaS_Master_2024_Secure!Pass</code></td>
                                </tr>
                            </table>
                            <p class="text-muted mt-2">
                                <small>
                                    <i class="fa fa-info-circle" title="Information" aria-hidden="true"/> Use this to manage all databases (master + tenant databases)
                                </small>
                            </p>
                        </div>
                    </div>
                    
                    <hr/>
                    
                    <div class="mt-3">
                        <h5>Quick Links</h5>
                        <div class="btn-group" role="group">
                            <a href="http://localhost:8080/web/database/manager" target="_blank" class="btn btn-primary" role="button">
                                <i class="fa fa-database" title="Database" aria-hidden="true"/> Database Manager
                            </a>
                            <a href="/web#action=saas_signup.action_saas_client" class="btn btn-success" role="button">
                                <i class="fa fa-users" title="Users" aria-hidden="true"/> View Tenant Clients
                            </a>
                            <a href="/saas/signup" target="_blank" class="btn btn-info" role="button">
                                <i class="fa fa-external-link" title="External Link" aria-hidden="true"/> Public Signup Form
                            </a>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-4" role="alert" aria-live="assertive">
                        <i class="fa fa-exclamation-triangle" title="Warning" aria-hidden="true"/> <strong>Security Warning:</strong> 
                        Change these default passwords before deploying to production!
                    </div>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for Master Password Info -->
    <record id="action_master_password_info" model="ir.actions.act_window">
        <field name="name">Master Password Info</field>
        <field name="res_model">saas.master.password.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_master_password_info"/>
        <field name="target">new</field>
    </record>

</odoo>
